<!doctype html>
<html lang="en">
  <head>
    <title>Just One Question - Login</title>
    <% include ../partials/head %>
  </head>

  <body>
    <% include ../partials/body_start %>
    <div class="col-md-12">

      <h1>Login</h1>
      <form method="post">
        <div class="form-group col-md-6 col-md-offset-3">
          <input type="email" name="username" class="form-control input-lg" placeholder="Email"/>
        </div>

        <div class="form-group col-md-6 col-md-offset-3">
          <input type="password" name="password" class="form-control input-lg" placeholder="Password"/>
        </div>

        <div class="form-group col-md-12">
          <button type="submit" class="btn btn-primary btn-lg">Login</button>
        </div>

        <div class="form-group col-md-12">
          <a href="/auth/forgot">Forgot your password?</a>
        </div>
      </form>

    </div>
    <% include ../partials/body_end %>
  </body>
</html>
